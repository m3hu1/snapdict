{
    "manifest_version": 3,
    "name": "SnapDictionary",
    "version": "1.0",
    "description": "Instant word meanings at your fingertips.",
    "icons": {
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": ["storage"],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  